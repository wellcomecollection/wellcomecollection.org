{
  "id": "exhibition-texts",
  "label": "Exhibition text",
  "repeatable": true,
  "status": true,
  "format": "custom",
  "json": {
    "Main": {
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "single": "heading1",
          "useAsTitle": true
        }
      },
      "related-exhibition": {
        "type": "Link",
        "config": {
          "label": "Related Exhibition",
          "select": "document",
          "customtypes": ["exhibitions"]
        }
      },
      "introText": {
        "type": "StructuredText",
        "config": {
          "multi": "paragraph,hyperlink,strong,em",
          "label": "Introductory text",
          "placeholder": "This will fallback to the related exhibition's promo text if not filled in"
        }
      }
    },
    "Components": {
      "components": {
        "type": "Group",
        "fieldset": "Text Component",
        "config": {
          "fields": {
            "standaloneTitle": {
              "type": "StructuredText",
              "config": {
                "multi": "paragraph,hyperlink,strong,em",
                "label": "Standalone title",
                "placeholder": "Provides a group heading for following components"
              }
            },
            "context": {
              "type": "StructuredText",
              "config": {
                "multi": "paragraph,hyperlink,strong,em",
                "label": "Context",
                "placeholder": "Optional context for a group of components"
              }
            },
            "title": {
              "type": "StructuredText",
              "config": {
                "label": "Title",
                "single": "heading1",
                "useAsTitle": true
              }
            },
            "tombstone": {
              "type": "StructuredText",
              "config": {
                "multi": "paragraph,hyperlink,strong,em",
                "label": "Tombstone"
              }
            },
            "caption": {
              "type": "StructuredText",
              "config": {
                "multi": "paragraph,hyperlink,strong,em",
                "label": "Caption"
              }
            }
          }
        }
      }
    }
  }
}