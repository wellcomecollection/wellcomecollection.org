{
  "id": "exhibition-texts",
  "label": "Exhibition text",
  "repeatable": true,
  "status": true,
  "format": "custom",
  "json": {
    "Main": {
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "",
          "allowTargetBlank": true,
          "single": "heading1"
        }
      },
      "related_exhibition": {
        "type": "Link",
        "config": {
          "label": "Related exhibition",
          "select": "document",
          "customtypes": ["exhibitions"]
        }
      },
      "intro_text": {
        "type": "StructuredText",
        "config": {
          "label": "Introductory text",
          "placeholder": "This will fallback to the related exhibition's promo text if not filled in",
          "allowTargetBlank": true,
          "multi": "paragraph,strong,em,hyperlink"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "guide_section_heading": {
              "type": "SharedSlice"
            },
            "guide_text_item": {
              "type": "SharedSlice"
            }
          }
        }
      }
    }
  }
}