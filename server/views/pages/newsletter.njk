{% extends 'layout/default.njk' %}

{% block body %}
  {% set newsletterModel = {
    isSuccess: isSuccess,
    isError: isError,
    isConfirmed: isConfirmed
  } %}

  {% if featuresCohort | isFlagEnabled('newsletter', featureFlags) %}
    <div class="{{ {s: 4} | spacingClasses({margin: ['top']}) }}">
      <div class="row {{ {s: 8} | spacingClasses({padding: ['bottom']}) }}">
        <div class='container'>
          <div class='grid'>
            <div class="{{ {s: 12, m: 10, shiftM: 1, l: 8,  shiftL: 2, xl: 8, shiftXL: 2} | gridClasses }}">
              {% componentJsx 'NewsletterSignup', newsletterModel %}
            </div>
          </div>
        </div>
      </div>
    </div>
  {% endif %}
{% endblock %}
