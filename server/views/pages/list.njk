{% extends 'layout/default.njk' %}

{% block body %}
  <div class="row row--cream {{ {s:10, m:10, l:10} | spacingClasses({padding: ['top']}) }}">
    <div class="container">
      <div class="grid">
        <div class="grid__cell">
          <h1 class="heading--large {{ {s:0, m:0, l:0} | spacingClasses({margin: ['top']}) }} {{ {s:0, m:0, l:0} | spacingClasses({margin: ['bottom']}) }}">{{ list.name }}</h1>
        </div>
      </div>

      <div class="grid">
        <div class="{{ {s: 4, m: 8, l: 8} | gridClasses }}">
          <p class="{{ {s:2, m:2, l:2} | spacingClasses({margin: ['top']}) }} {{ {s:0, m:0, l:0} | spacingClasses({margin: ['bottom']}) }}">{{ list.description }}</p>
        </div>
      </div>

      <div class="grid">
        <div class="grid__cell">
          <p class="text--meta {{ {s:2, m:2, l:2} | spacingClasses({margin: ['top']}) }} {{ {s:2, m:2, l:2} | spacingClasses({margin: ['bottom']}) }}">{{ list.total }} articles</p>
        </div>
      </div>

    </div>
  </div>

  <div class="row">
    <div class="container">
      <div class="grid">
        <div class="{{ {s:4, m:8, l:12} | gridClasses }}">
          <div class="{{ {s:5, m:5, l:5} | spacingClasses({padding: ['top']}) }}  {{ {s:5, m:5, l:5} | spacingClasses({padding: ['bottom']}) }} text--meta flex flex--center">
            {{ pagination.range.beginning }} - {{ pagination.range.end }}
          </div>
        </div>
      </div>
      <hr class="divider divider--keyline divider--keyline-grey" />
    </div>
  </div>

  <div class="row {{ {s:4, m:4, l:4} | spacingClasses({padding: ['top']}) }} ">
    <div class="container">
      <div class="grid">
        {% for promo in list.items.toJS() %}
          <div class="{{ {s:4, m:4, l:3, xl:3} | gridClasses }}">
            {% component 'promo', { promo: promo } %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

  <div class="row {{ {s:10, m:10, l:10} | spacingClasses({padding: ['top']}) }} {{ {s:10, m:10, l:10} | spacingClasses({padding: ['bottom']}) }} ">
    <div class="container">
      <div class="grid">
        <div class="grid__cell">
          {% componentJsx 'Pagination', pagination %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
