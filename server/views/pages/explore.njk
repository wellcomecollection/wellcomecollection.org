{% extends 'layout/default.njk' %}

{% block body %}
  {% component 'page-description', { title: 'Explore', modifiers: ['hidden'] } %}
  <div class="row row--cream row--has-wobbly-background">
    <div class="container">
      <div class="grid">
        <div class="{{ {s:4, m:8, l:12, xl:12} | gridClasses }}">
          {% component 'promo', { promo: topPromo } %}
        </div>
      </div>
    </div>
    <div class="row__wobbly-background"></div>
    <div class="container">
      <hr class="divider divider--keyline" />
    </div>
    <div class="container container--scroll container--no-max-width container--scroll-cream touch-scroll">
      <div class="grid grid--dividers grid--scroll">
        {% for promo in second3Promos.toJS() %}
          <div class="grid__cell">
            {% component 'promo', { promo: promo } %}
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="container container--no-collapse">
      <hr class="divider divider--thick" />
    </div>
  </div>

  {% componentV2 'series-container', aDropInTheOcean %}

  {# Chronological #}
  <div class="row row--no-padding">
    <div class="container">
      <div class="grid">
        <div class="{{ {s:4, m:8, l:12, xl: 12} | gridClasses }}">
          <h2 class="heading--large v-margin-0">You may have missed</h2>
        </div>
        <div class="{{ {s:4, m:8, l:8} | gridClasses }}">
          <a class="more-info-link" href="/articles">
            {% icon 'actions/arrow-small', null, ['icon--270', 'icon--action'] %}
            <span class="more-info-link__text">More articles</span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="row row--small-top-padding">
    <div class="container">
      <div class="grid">
        {% for promo in next8Promos.toJS() %}
          <div class="{{ {s:4, m:4, l:3, xl:3} | gridClasses }}">
            {% component 'promo', { promo: promo } %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}
