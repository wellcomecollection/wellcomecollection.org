{% extends 'layout/default.njk' %}

{% block body %}
  {% component 'page-description', { title: 'Explore', modifiers: ['hidden'] } %}
  <div class="row row--no-bottom-padding row--cream row--has-wobbly-background">
    <div class="container">
      <div class="grid">
        <div class="{{ {s:4, m:8, l:12, xl:12} | gridClasses }}">
          {% component 'promo', { promo: topPromo } %}
        </div>
      </div>
    </div>
    <div class="row__wobbly-background"></div>
  </div>

  <div class="row row--cream row--no-padding">
    <div class="container container--scroll touch-scroll">
      <div class="grid grid--dividers grid--featured">
        {% for promo in second3Promos.toJS() %}
          <div class="{{ {s:4, m:4, l:4} | gridClasses }}">
            {% component 'promo', { promo: promo } %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

  <div class="row">
    <div class="container">
      <div class="grid">
        {% for promo in next8Promos.toJS() %}
          <div class="{{ {s:4, m:4, l:3, xl:3} | gridClasses }}">
            {% component 'promo', { promo: promo } %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}
