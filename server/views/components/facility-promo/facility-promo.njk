{% if data.sizes %}
  {% set sizes = data.sizes %}
{% else %}
  {% set sizes = '100vw' %}
{% endif %}
<a id="{{model.id}}" href="{{ model.url }}" class="facility-promo">
  <div class="{{- [
      {s:2} | spacingClasses({padding: ['top']}),
      {s:2} | spacingClasses({padding: ['left', 'right']}),
      {s:4} | spacingClasses({padding: ['bottom']})
    ].join(' ') }} bg-cream rounded-diagonal">

    <div class="facility-promo__image-container rounded-corners">
      {% componentV2 'image', model.image, {}, {lazyload: true, sizesQueries: sizes, defaultSize: data.defaultSize} %}
    </div>

    <h2 class="facility-promo__title {{ {s:'WB5'} | fontClasses }}  {{ {s:2} | spacingClasses({margin: ['top']}) }}">{{ model.title }}</h2>

    <p class="{{ {s:'HNL5'} | fontClasses }} no-margin no-padding">{{ model.description | striptags | safe }}</p>

  </div>
</a>
