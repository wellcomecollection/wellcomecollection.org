<div class="tags {{ {s:2} | spacingClasses({margin: ['bottom']}) }}">
  <ul class="tags__list plain-list no-margin no-padding flex">
    {% for tag in model %}
      <li class="tags__tag {{ {s:'HNL5'} | fontClasses }} {{ {s:2} | spacingClasses({margin: ['right', 'bottom']}) }} rounded-diagonal"
        data-track-event='{"category": "component", "action": "tag:click", "label": "text:{{ tag.prefix + ' ' if tag.prefix }}{{ tag.text }}, url:{{ tag.url }}"}'>
        <{{'a' if tag.url else 'div'}}
          {% if tag.url %}href="{{ tag.url }}"{% endif %}
          class="flex plain-link {{ {s:1} | spacingClasses({padding: ['left', 'right', 'top', 'bottom']}) }} font-white bg-{{ tag.bgColor or 'charcoal' }} {% if tag.url %}bg-darken-hover transition-bg{% endif %}">
          {{ tag.text }}
        </{{'a' if tag.url else 'div'}}>
      </li>
    {% endfor %}
  </ul>
</div>
