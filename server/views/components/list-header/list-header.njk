<div class="row {% block bgColour %}bg-cream{% endblock %} {{ {s:3, m:5, l:5} | spacingClasses({padding: ['top', 'bottom']}) }} }}">
  <div class="container">
    <div class="grid">
      <div class="{{ {s: 12, m: 12, l: 8, xl: 8} | gridClasses }}">
        <h1 class="{{ {s:'WB6', m:'WB5', l:'WB4'} | fontClasses }} no-margin">{{ model.name }}</h1>

        {% if model.description %}
          <div class="{{ {s:2} | spacingClasses({margin: ['top']}) }}">
            <p class="no-margin">{{ model.description }}</p>
          </div>
        {% endif %}

	      {% block slot %}{% endblock %}
      </div>
    </div>
  </div>
</div>
