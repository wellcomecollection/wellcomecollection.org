<div id="cookie-notification" class="cookie-notification">
  <div class="container">
    <div class="grid">
      <div class="grid__cell">
        <div class="cookie-notification__inner">
          <span class="cookie-notification__content">
            {% icon 'other/cookies' %}<p class="cookie-notification__text">Wellcome uses cookies. <a href="https://wellcome.ac.uk/about-us/terms-use#cookies">Read our policy</a>.</p>
          </span>
          <button id="cookie-notification-close" class="cookie-notification__close">
            {% icon 'actions/cross-big', 'Close cookie notification' %}
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
