<div class="header grid js-header-burger">
  <div class="header__upper grid__cell">
    <div class="header__inner container">
      <div class="header__burger">
        <a href="#footer-nav-1" id="header-burger-trigger"
          class="header__burger-trigger js-header-burger-trigger"
          aria-label="menu">
          <span></span>
          <span></span>
          <span></span>
        </a>
      </div>
      <a href="https://wellcomecollection.org" class="header__brand">
        {% icon 'other/wellcome-collection-black', 'Wellcome Collection', ['icon--collection'] %}
      </a>
      <nav id="header-nav"
        class="header__nav js-header-burger-drawer"
        aria-labelledby="header-burger-trigger">
        <ul class="header__list">
          {% for navLink in navLinks %}
            <li class="header__item {{ 'header__item--is-current' if navLink.isCurrent }}">
              <a href="{{ navLink.href }}"
                class="header__link js-header-nav-link"
                {%- if navLink.isCurrent %}
                  aria-current="true"
                {%- endif %}>{{ navLink.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>
      <div id="header-search" class="header__search">
        <form class="header__form"
          action="https://wellcomecollection.org/search"
          method="post">
          <div class="header__input-wrap js-show-hide-drawer">
            <label class="header__label" for="header-input">Search</label>
            <input id="header-input" class="header__input js-header-input" placeholder="Search" name="search" />
            {# This is here as we're sending people back to V1, and drupal requires it #}
            {# TODO: remove once we build our own search interface #}
            <input type="hidden" name="form_id" value="col_search_form" />
          </div>
          <button class="header__button js-show-hide-trigger">
            <span class="header__button-inner">
              {% icon 'actions/search', null, ['header__search-button'] %}
              <span class="header__button-text">Search</span>
          </button>
          <span role="button" aria-controls="header-input" class="header__close-search js-header-close-search">
            {% icon 'actions/cross-big', 'Close search box' %}
          </span>
        </form>
      </div>
    </div>
  </div>
</div>
