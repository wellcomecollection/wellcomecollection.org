<section class="transporter {{ {s:1} | spacingClasses({margin: ['bottom']}) }}">
  {% if type !== 'theme' %}
  <h2 class="transporter__title {{ {s:'WB5', l:'WB4'} | fontClasses }} {{ {s:0} | spacingClasses({margin: ['top']}) }}">{{ title }}</h2>
  {% endif %}
  <div class="grid grid--dividers">
    {% if type === 'theme' %}
    <div class="{{ {s:12, m:12, l:3} | gridClasses }} transporter__item">
      <p class="transporter__more {{ {s:'HNM5'} | fontClasses }} {{ {s:1} | spacingClasses({margin: ['bottom']}) }}">More from this theme</p>
      <h2 class="transporter__title {{ {s:'WB5', l:'WB4'} | fontClasses }} {{ {s:0} | spacingClasses({margin: ['top']}) }}">{{ title }}</h2>
      <p class="transporter__intro font--pewter {{ {s:'HNL5'} | fontClasses }}">{{ introCopy }}</p>
    </div>
    {% endif %}

    {% for promo in promos %}
    <div class="{{ {s:12, m:12} | gridClasses }} transporter__item">
      {% set modifiers = promo.modifiers.concat('large-text') if (promos.length <= 4) else promo.modifiers %}
      {% componentV2 'promo', promo | objectAssign({ modifiers: modifiers }) %}
    </div>
    {% endfor %}
  </div>
  {% if themeUrl %}
    {% componentV2 'more-info-link', {name: 'Full theme', url: themeUrl} %}
  {% endif %}
</section>
