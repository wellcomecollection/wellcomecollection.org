<div class="pagination float-r flex-inline flex--v-center font-pewter {{ {s:'LR3', m:'LR2'} | fontClasses }}">
  {% if (model.prevPage) %}
    <a href="{{ model.prevQueryString }}" rel="prev" class="{{ {s:2} | spacingClasses({margin: ['right']}) }}">
      <div class="icon-rounder border-color-silver flex flex--v-center">
        {% icon 'arrow', 'Previous (page '+ model.prevPage +')', ['icon--180', 'h-center'] %}
      </div>
    </a>
  {% endif %}

  <span>Page {{ model.currentPage }} of {{ model.pageCount }}</span>
  {% if (model.nextPage) %}
    <a href="{{ model.nextQueryString }}" rel="next" class="{{ {s:2} | spacingClasses({margin: ['left']}) }}">
      <div class="icon-rounder border-color-silver flex flex--v-center">
        {% icon 'arrow', 'Next (page '+ model.nextPage +')', ['h-center'] %}
      </div>
    </a>
  {% endif %}
</div>
