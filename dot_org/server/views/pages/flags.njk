{% extends 'layout/default.njk' %}

{% block body %}
<div class="feature-flags {{ {s:'HNL3'} | fontClasses }}">
  <div class="row">
    <div class="container">
      <div class="grid">
        <div class="{{ {s:12, m:12, l:12, xl: 12} | gridClasses }}">
          <h2 class="feature-flags__title {{ {s:'WB5', m:'WB4', l:'WB3'} | fontClasses }}">Feature Flags</h2>
        </div>
      </div>
      <div class="grid">
        <div class="{{ {s:12, m:6, l:4, xl: 4} | gridClasses }}">
            <p>You currently belong to the <span class="feature-flags__current-cohort {{ {s:'HNM3'} | fontClasses }} js-current-cohort">{{ featuresCohort  if featuresCohort else
             'default' }}</span> group.</p>
            {% for cohort in cohorts %}
              <button class="btn btn--light {{ {s:'HNM5'} | fontClasses }} {{ {s:2, m:4} | spacingClasses({margin: ['bottom']})}} js-cohort-button" data-cohort="{{cohort}}">Join the {{cohort}} group</button>
            {% endfor %}
        </div>
        <div class="{{ {s:12, m:6, l:8, xl: 8} | gridClasses }}">
          {% for name, flag in featureFlags %}
          <table class="feature-flags__table {{ {s:2, m:4} | spacingClasses({margin: ['bottom']})}}">
            <caption class="feature-flags__caption {{ {s:1, m:2} | spacingClasses({padding: ['top', 'right', 'bottom', 'left']})}}"><strong>{{name}}</strong></caption>
            <tr class="feature-flags__row">
              <th class="feature-flags__heading {{ {s:'HNM4'} | fontClasses }} {{ {s:1, m:2} | spacingClasses({padding: ['top', 'right', 'bottom', 'left']})}}">cohort</th>
              <th class="feature-flags__heading {{ {s:'HNM4'} | fontClasses }} {{ {s:1, m:2} | spacingClasses({padding: ['top', 'right', 'bottom', 'left']})}}">status</th>
              <th class="feature-flags__heading {{ {s:'HNM4'} | fontClasses }} {{ {s:1, m:2} | spacingClasses({padding: ['top', 'right', 'bottom', 'left']})}}">value</th>
            </tr>
            {% for name, settings in flag %}
              <tr class="feature-flags__row">
                <td class="feature-flags__cell {{ {s:'HNL4'} | fontClasses }} {{ {s:1, m:2} | spacingClasses({padding: ['top', 'right', 'bottom', 'left']})}}">{{name}}</td>
                <td class="feature-flags__cell {{ {s:'HNL4'} | fontClasses }} feature-flags__cell--{{settings.status}} {{ {s:1, m:2} | spacingClasses({padding: ['top', 'right', 'bottom', 'left']})}}">{{settings.status}}</td>
                <td class="feature-flags__cell {{ {s:'HNL4'} | fontClasses }} {{ {s:1, m:2} | spacingClasses({padding: ['top', 'right', 'bottom', 'left']})}}">{{settings.value}}</td>
              </tr>
            {% endfor %}
            </table>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
