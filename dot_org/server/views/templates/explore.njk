{% extends "layout/default.njk" %}

{% block body %}
  {% componentV2 'page-description', { title: 'Explore' }, {'hidden': true} %}

  <div class="row bg-cream row--has-wobbly-background {{ {s:10} | spacingClasses({padding: ['top']}) }}">
    <div class="container">
      <div class="grid">
        <div class="{{ {s:12, m:12, l:12, xl:12} | gridClasses }}">
          {% componentV2 'promo', comicPromo %}
        </div>
      </div>
    </div>
    <div class="row__wobbly-background"></div>
  </div>

  <div class="row bg-cream">
    <div class="container container--scroll container--scroll-cream touch-scroll">
      <div class="grid grid--dividers grid--scroll">
        <div class="{{ {s:12, m:6, l:4} | gridClasses }}">
          {% componentV2 'promo', promo %}
        </div>

        <div class="{{ {s:12, m:6, l:4} | gridClasses }}">
          {% componentV2 'promo', comicPromo %}
        </div>

        <div class="{{ {s:12, m:6, l:4} | gridClasses }}">
          {% componentV2 'promo', seriesArticlePromo %}
        </div>
      </div>
    </div>
  </div>

  <div class="row {{ {s:10} | spacingClasses({padding: ['top']}) }}">
    <div class="container">
      <div class="grid">
        <div class="{{ {s:12, m:6, l:12, xl:12} | gridClasses }}">
          {% componentV2 'promo', promo %}
        </div>
        <div class="{{ {s:12, m:6, l:8} | gridClasses }}">
          {% componentV2 'promo', promo %}
        </div>
        <div class="{{ {s:12, m:6, l:4} | gridClasses }}">
          {% componentV2 'promo', promo %}
        </div>
        <div class="{{ {s:12, m:6, l:4} | gridClasses }}">
          {% componentV2 'numbered-list', numberedList %}
        </div>
      </div>
    </div>
  </div>

  <div class="row {{ {s:10} | spacingClasses({padding: ['top']}) }}">
    {% componentV2 'promo', standaloneArticlePromo %}
  </div>

{% endblock %}
