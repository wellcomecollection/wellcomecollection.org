{% extends 'pages/article.njk' %}

{% block seriesNavigation %}
  {% if seriesNav %}
    {% componentV2 'numbered-list', seriesNav.model, seriesNav.modifiers, seriesNav.data %}
  {% endif %}
{% endblock %}

{% block articleBody %}
  {% component 'article-body', { articleBody: article.bodyParts, contentType: article.contentType } %}
{% endblock %}


{% block transporters %}
  <div class="row">
    <div class="wobbly-edge wobbly-edge--rotated wobbly-edge--cream wobbly-edge--small js-wobbly-edge"></div>
    <div class="container">
      {% component 'transporter', transporter %}
      {% componentV2 'divider', null, {'thin': true} %}
    </div>
  </div>

  <div class="row">
    <div class="container">
      <div class="grid">
        <div class="{{ {s:12, m:8, l:12, xl: 12} | gridClasses }}">
          <h2 class="{{ {s:'WB6', m:'WB5', l:'WB4'} | fontClasses }} v-margin-0">Latest</h2>
        </div>
      </div>
    </div>
  </div>

  <div class="row {{ {s:4} | spacingClasses({padding: ['top']}) }}">
    <div class="container container--scroll touch-scroll">
      <div class="grid grid--scroll grid--dividers grid--theme-6-strip">
        {% for i in range(0, 6) %}
          <div class="grid__cell">
            {% componentV2 'promo', promo %}
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="container container--no-collapse">
      {% componentV2 'divider', null, {'thin': true} %}
    </div>
  </div>
{% endblock %}
