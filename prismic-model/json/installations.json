{
  "Installation": {
    "title": {
      "type": "StructuredText",
      "config": {
        "label": "Title",
        "single": "heading1",
        "useAsTitle": true
      }
    },
    "description": {
      "type": "StructuredText",
      "config": {
        "multi": "paragraph, hyperlink, strong, em",
        "label": "Description"
      }
    },
    "place": {
      "type": "Link",
      "fieldset": "Place",
      "config": {
        "select": "document",
        "customtypes": [
          "places"
        ],
        "label": "Where is it?"
      }
    }
  },
  "Contributors": {
    "contributors": {
      "type": "Group",
      "fieldset": "Contributors",
      "config": {
        "fields": {
          "role": {
            "type": "Link",
            "config": {
              "label": "Role",
              "select": "document",
              "customtypes": [
                "editorial-contributor-roles"
              ]
            }
          },
          "contributor": {
            "type": "Link",
            "config": {
              "label": "Contributor",
              "select": "document",
              "customtypes": [
                "people",
                "organisations"
              ]
            }
          }
        }
      }
    }
  },
  "Promo": {
    "promo": {
      "type": "Slices",
      "config": {
        "label": "Promo",
        "choices": {
          "editorialImage": {
