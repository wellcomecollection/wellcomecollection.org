{
  "compilerOptions": {
    "composite": true,
    "baseUrl": "src",
    "lib": [
      "dom",
      "dom.iterable",
      "es2020"
    ],
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types"
    ],
    "target": "es2018",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@weco/common": [
        "../../common/lib"
      ]
    },
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "references": [
    {
      "path": "../../common"
    }
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
