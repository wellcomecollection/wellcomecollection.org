{
  "compilerOptions": {
    "composite": true,
    "baseUrl": "src",
    "lib": ["dom", "es2020"],
    "typeRoots": ["../../node_modules/@types", "node_modules/@types"],
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "es2015",
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./lib",
    "noEmitOnError": false,
    "strict": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "noUnusedLocals": false,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@weco/common": ["../../common"]
    }
  },
  "exclude": [
    "node_modules",
    "node_modules/@weco/**",
    "node_modules/@types/react",
    "lib/",
    "**/*.stories.tsx",
    "__tests__/"
  ],
  "references": [
    {
      "path": "../../common"
    }
  ]
}
