{
  "@title": "Curated list",
  "@repeatable": true,
  "Main" : {
    "uid"  : {
      "type"  : "UID",
      "config"  : {
        "label"  : "uid"
      }
    },
    "title": {
      "type" : "StructuredText",
      "config" : {
        "label" : "Title",
        "single" : "paragraph",
        "useAsTitle": true
      }
    },
    "description": {
      "type" : "StructuredText",
      "config" : {
        "label" : "Description",
        "single" : "paragraph"
      }
    },
    "section" : {
      "fieldset" : "Section",
      "type" : "Slices",
      "config" : {
        "choices" : {
          "series" : {
            "type" : "Link",
            "fieldset" : "Series",
            "config" : {
              "select" : "document",
              "label" : "Series",
              "customtypes" : ["series"]
            }
          },
          "promos" : {
            "type" : "Slice",
            "fieldset" : "Section",
            "non-repeat" : {
              "heading" : {
                "type" : "StructuredText",
                "config" : {
                  "label" : "Heading",
                  "single" : " "
                }
              },
              "link" : {
                "type" : "Link",
                "config" : {
                  "select" : "web",
                  "label" : "Link"
                }
              }
            },
            "repeat" : {
              "promo" : {
                "type" : "Link",
                "config" : {
                  "select" : "document",
                  "label" : "Promos",
                  "customtypes" : ["promos"]
                }
              }
            }
          }
        }
      }
    }
  }
}
